<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coapplicant_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginStart="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginEnd="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:padding="@dimen/card_padding"
            android:id="@+id/coapplicant_card_table"
            >
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    style="@style/CardHeaderText"
                    />

                <TextView
                    android:id="@+id/name_coapplicant_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CardHeaderText"
                    android:hint="RANJANA RAJPUT"
                    android:text="RANJANA RAJPUT" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    style="@style/CardHeaderText"
                    />

                <TextView
                    android:id="@+id/address_coapplicant_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CardHeaderText"
                    android:hint="ARYAN VILLA KESHAV BAGH KOTESHWAR COLONY KOTESHWAR TEMPLE "
                    android:text="ARYAN VILLA KESHAV BAGH KOTESHWAR COLONY KOTESHWAR TEMPLE "
                    />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"

                    />

                <TextView
                    android:id="@+id/mobile_coapplicant_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:hint="123456789"
                    android:text="123456789" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assigned To"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/assigned_to_coapplicant_card"

                    android:hint="Some Employee"
                    android:text="Some Employee"
                    />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_coapplicant_card"

                    android:hint="New"
                    android:text="New"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/companey_name_coapplicant_card"

                    android:hint="Some Company"
                    android:text="Some Company"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/company_address_coapplicant_card"

                    android:hint="ARYAN VILLA KESHAV BAGH KOTESHWAR COLONY KOTESHWAR TEMPLE"
                    android:text="ARYAN VILLA KESHAV BAGH KOTESHWAR COLONY KOTESHWAR TEMPLE"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assigned To"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/company_assigned_to_coapplicant_card"

                    android:hint="Some employe"
                    android:text="Some employe"
                    />
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/company_status_coapplicant_card"

                    android:hint="In Progress "
                    android:text="In Progress "
                    />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Co-Applicant"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:id="@+id/nocoapplicant_textview"
            android:visibility="gone"
            android:padding="@dimen/card_padding"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>